<%location_name = nil%>
<% @jobs.each do |job| %>
  <%if(!location_name || location_name != job.location_name)%>
      <% location_name = job.location_name%>
      <% tr_classes = "after-subheader-row" %>
      <%= render('subheader_row', :no_of_days => no_of_days, :location_name => location_name)%>
  <% else %>
  		<% tr_classes = nil %>
  <%end%>
  <%= render('job_row', :no_of_days => no_of_days, :job => job, tr_classes: tr_classes)%>
<%end%>
