<%customer_name = nil%>
<% @jobs.each do |job| %>
  <%if(!customer_name || customer_name != job.customer_name)%>
      <%customer_name = job.customer_name%>
      <%= render('customer_row', :no_of_days => no_of_days, :customer_name => customer_name)%>
  <%end%>
  <%= render('job_row', :no_of_days => no_of_days, :job => job)%>
<%end%>
