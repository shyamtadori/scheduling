<div class="row form-group nested-fields">
  <div class="col-md-6">
    <div class="panel panel-default float-left width-100">
      <div class="panel-heading float-left width-100">
        New Rule
        <%= link_to_remove_association '<i class="fa fa-trash-o" aria-hidden="true"></i>'.html_safe, f, class: 'float-right btn btn-danger' %>
          
      </div>
      <div class="panel-body float-left width-100">
        <div class="row form-group">
          <div class="col-sm-2">
            <%= f.label :name, class: " control-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.text_field :name, class: "form-control"%>
          </div>
        </div>
        <div class="row form-group">
          <div class="col-sm-2">
            <%= f.label :description, class: "control-label" %>
          </div>
          <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control"%>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
    
  