<h1>Listing Calendars</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Effective start date</th>
      <th>Effective end date</th>
      <th>Created by</th>
      <th>Last updated by</th>
      <th>Creation date</th>
      <th>Last update date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @calendars.each do |calendar| %>
      <tr>
        <td><%= calendar.name %></td>
        <td><%= calendar.effective_start_date %></td>
        <td><%= calendar.effective_end_date %></td>
        <td><%= calendar.created_user_name %></td>
        <td><%= calendar.last_upated_user_name %></td>
        <td><%= calendar.creation_date %></td>
        <td><%= calendar.last_update_date %></td>
        <td><%= link_to 'Show', calendar %></td>
        <td><%= link_to 'Edit', edit_calendar_path(calendar) %></td>
        <td><%= link_to 'Destroy', calendar, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

